<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>2025 Check ACM Attendance form</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <style>
      html, body {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      height: 70%;
      }
      body, div, h1, form, input, p { 
      padding: 0;
      margin: 0;
      outline: none;
      font-family: Roboto, Arial, sans-serif;
      font-size: 16px;
      color: #666;
      }
      h1 {
      padding: 10px 0;
      font-size: 32px;
      font-weight: 300;
      text-align: left;
      margin-left: 5%;
      }
      h4 {
      padding: 10px 0;
      font-size: 18px;
      font-weight: 700;
      text-align: right;
      margin-right: 5%;
      }
      p {
      font-size: 12px;
      }
      hr {
      color: #a9a9a9;
      opacity: 0.3;
      }
      .main-block {
      max-width: 700px; 
      min-height: 300px; 
      padding: 10px 0;
      margin: auto;
      border-radius: 5px; 
      border: solid 1px #ccc;
      box-shadow: 1px 2px 5px rgba(0,0,0,.31); 
      background: #fff7d3; 
      }
      form {
      margin: 0 30px;
      }
      .account-type, .gender {
      margin: 15px 0;
      }
      input[type=radio] {
      display: none;
      }
      label#icon {
      margin: 0;
      border-radius: 5px 0 0 5px;
      }
      label.radio {
      position: relative;
      display: inline-block;
      padding-top: 4px;
      margin-right: 20px;
      text-indent: 30px;
      overflow: visible;
      cursor: pointer;
      }
      label.radio:before {
      content: "";
      position: absolute;
      top: 2px;
      left: 0;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: #1c87c9;
      }
      label.radio:after {
      content: "";
      position: absolute;
      width: 9px;
      height: 4px;
      top: 8px;
      left: 4px;
      border: 3px solid #fff;
      border-top: none;
      border-right: none;
      transform: rotate(-45deg);
      opacity: 0;
      }
      input[type=radio]:checked + label:after {
      opacity: 1;
      }
      input[type=text], input[type=password] {
      width: calc(100% - 57px);
      height: 36px;
      margin: 13px 0 0 -5px;
      padding-left: 10px; 
      border-radius: 0 5px 5px 0;
      border: solid 1px #cbc9c9; 
      box-shadow: 1px 2px 5px rgba(0,0,0,.09); 
      background: #fff; 
      }
      input[type=password] {
      margin-bottom: 15px;
      }
      #icon {
      display: inline-block;
      padding: 9.3px 15px;
      box-shadow: 1px 2px 5px rgba(0,0,0,.09); 
      background: #1c87c9;
      color: #fff;
      text-align: center;
      }
      .btn-block {
      float: right;
      max-width: 200px;
      margin: 10px;
      text-align: center;
      }
      button {
      width: 100%;
      padding: 10px 20px;
      margin: 10px auto;
      border-radius: 5px; 
      border: none;
      background: #1c87c9; 
      font-size: 14px;
      font-weight: 600;
      color: #fff;
      }
      button:hover {
      background: #26a9e0;
      }

      /* Container to allow scrolling */
      .table-container {
            width: 100%;
            overflow-x: auto; /* Enables horizontal scroll if necessary */
        }

        /* Main table layout */
        .table {
            display: flex;
            flex-direction: column;
            width: 100%;
            /* border: 1px solid black; */
            padding: 5px;
            min-width: 300px; /* Prevents content from collapsing */
        }

        .row {
            display: flex;
        }

        .cell {
            flex: 1;
            padding: 10px;
            /* border: 1px solid black; */
            text-align: center;
            background-color: transparent;
            word-wrap: break-word; /* Prevents text overflow */
        }

        .cell input {
            width: 100%; /* Makes input take full width of the cell */
            box-sizing: border-box; /* Ensures padding & borders donâ€™t affect width */
        }
        .cell label {
            display: block; /* Ensures it takes full width */
            text-align: left; /* Aligns text to the left */
            font-weight: bold;
        }

        .header {
            font-weight: bold;
            background-color: transparent;
        }

        /* Adjust layout for smaller screens */
        @media (max-width: 500px) {
            .row {
                flex-direction: column; /* Stack each cell in a row */
                /* border-bottom: 2px solid black; */
            }

            .cell {
                width: 100%; /* Make each cell take full row */
                text-align: left;
            }

            .cell::before {
                font-weight: bold;
                display: block;
                background: transparent;
                padding: 5px;
            }

            /* Add labels before cells to indicate headers */
            /* .row:not(.header) .cell:nth-child(1)::before { content: "Name"; }
            .row:not(.header) .cell:nth-child(2)::before { content: "Age"; }
            .row:not(.header) .cell:nth-child(3)::before { content: "Country"; } */
        }
    </style>
  </head>
  <body>
    <div class="main-block">
        <img src="/img/church-banner.png" width="100%">
        <form id="myForm">
            <br />
            <div class="table-container">
              <div class="table">
                  <div class="row">
                    <div class="cell">
                      <label for="birthyear">Year of birth</label>
                      <input type="text" name="birthyear" id="birthyear" placeholder="1980" maxlength="4" required/>
                    </div>
                    <div class="cell">
                      <label for="birthmonth">Month of birth</label>
                      <input type="text" name="birthmonth" id="birthmonth" placeholder="07" maxlength="2" required/>
                    </div>
                    <div class="cell">
                      <label for="birthday">Date of birth</label>
                      <input type="text" name="birthday" id="birthday" placeholder="23" maxlength="2" required/>
                    </div>
                  </div>
                  <!-- <div class="row">
                      <div class="cell" style="grid-column: span 3;">
                        <span style="display: block; color: red; text-align: right; padding-right: 30px;">your birthday</span>
                      </div>
                  </div> -->
                  <div class="row">
                    <div class="cell" style="grid-column: span 3;">
                      <label for="birthyear">NRIC</label>
                      <input type="text" name="nric" id="nric" placeholder="733" maxlength="3" required/>
                      <label for="nric" style="color: red;">last 3 numbers, e.g. S8060733D -> 733</label>
                    </div>
                  </div>
                  <!-- <div class="row">
                    <div class="cell" style="grid-column: span 3;">
                      <span style="display: block; color: red; text-align: right; padding-right: 30px;">last 3 numbers, e.g. S8060733D -> 733</span>
                    </div>
                </div> -->
              </div>
            </div>
            <hr/>
            <br />
            <div id="buttonBlock" class="btn-block">
              <button id="markAttendance">Submit</button>
            </div>
            <div style="display: 'none';" id="msgBlock">
              <label style="color: red;" id="msg"></label>
            </div>
        </form>
    </div>
  </body>
  <script>
      document.getElementById("myForm").addEventListener("submit", function(event) {
          event.preventDefault();

          var input = document.getElementById("birthyear");
          var birthyear = input.value;
          input = document.getElementById("birthmonth");
          var birthmonth = input.value;
          input = document.getElementById("birthday");
          var birthday = input.value;

          input = document.getElementById("nric");
          var nric = input.value;

          if( !birthday || birthday.toString().length <= 0
              || !birthyear || birthyear.toString().length <= 0
              || !birthmonth || birthmonth.toString().length <= 0 
              || !nric || nric.toString().length <= 0 ){
            return;
          }

          var date = birthday + birthmonth + birthyear.slice(2);

          const options = {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({birthday: date, nric: nric, isAttended: 1})
        };

        // Make the POST request
        fetch(`https://d3q5injsllmv6q.cloudfront.net/acm/eng`, options)
          .then(response => {
            if (response.ok) {
                const elementToHide = document.getElementById("buttonBlock");
                elementToHide.style.display = 'none';
            }

            return response.json();
          })
          .then(data => {
            const elementToShow = document.getElementById("msgBlock");
            elementToShow.style.display = '';

            const msg = document.getElementById("msg");
            // msg.textContent = data.result;
            msg.innerHTML = data.result;
          })
          .catch(error => {
            console.log('Error:', error);
          });
      });
  </script>
</html>
